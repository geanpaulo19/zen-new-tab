{
  "manifest_version": 3,
  "name": "Zen New Tab",
  "description": "A minimal new tab with time, date, daily mantra, and beautiful backgrounds.",
  "version": "2.0",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "permissions": ["storage", "geolocation"],
  "host_permissions": [
    "https://nextjs-three-coral-93.vercel.app/*",
    "https://api.open-meteo.com/*",
    "https://nominatim.openstreetmap.org/*",
    "https://proxy.geanpaulofrancois.workers.dev/*",
    "https://zenquotes.geanpaulofrancois.workers.dev/*",
    "https://typefit.geanpaulofrancois.workers.dev/*",
    "https://dummyjson.com/*",
    "https://api.freeapi.app/*",
    "https://quotes-db.vercel.app/*"
  ]
}
